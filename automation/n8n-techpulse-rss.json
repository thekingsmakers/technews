{
  "name": "TechPulse RSS Ingest (Computer Weekly)",
  "nodes": [
    {
      "parameters": {
        "rule": "cron",
        "cronTime": "*/30 * * * *"
      },
      "name": "Scheduled Trigger",
      "type": "n8n-nodes-base.scheduleTrigger",
      "typeVersion": 1,
      "position": [
        100,
        300
      ]
    },
    {
      "parameters": {
        "url": "https://www.computerweekly.com/rss/Latest-IT-news.xml"
      },
      "name": "Fetch RSS Feed",
      "type": "n8n-nodes-base.rssFeedRead",
      "typeVersion": 1,
      "position": [
        300,
        300
      ]
    },
    {
      "parameters": {
        "functionCode": "const items = $items(\"Fetch RSS Feed\");\n\nconst normalizedItems = items.map(item => {\n  const title = item.json.title;\n  const slug = title.toLowerCase().replace(/[^a-z0-9]+/g, '-').replace(/(^-|-$)/g, '');\n\n  return {\n    json: {\n      title: title,\n      slug: slug,\n      summary: item.json.contentSnippet || (item.json.content ? item.json.content.substring(0, 250) : 'No summary available'),\n      content: item.json.content || 'No content available',\n      category: \"IT News\",\n      tags: [\"news\", \"computer weekly\"],\n      imageUrl: \"\",\n      publishedAt: item.json.pubDate,\n      featured: false\n    }\n  };\n});\n\nreturn normalizedItems;"
      },
      "name": "Normalize Data",
      "type": "n8n-nodes-base.function",
      "typeVersion": 1,
      "position": [
        500,
        300
      ]
    },
    {
      "parameters": {
        "url": "https://api.thekingsmaker.org/api/news",
        "authentication": "basicAuth",
        "options": {
          "body": "={{$node[\"Normalize Data\"].json}}",
          "headers": {
            "Content-Type": "application/json"
          }
        }
      },
      "name": "POST to Website API",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 1,
      "position": [
        700,
        300
      ],
      "credentials": {
        "basicAuth": {
          "id": "_placeholder_id",
          "name": "Tech News Basic Auth",
          "data": {
            "user": "Newbythekingsmaker",
            "password": "acf6b283-e353-4538-8a4f-fe7c67f338ad"
          }
        }
      }
    }
  ],
  "connections": {
    "Scheduled Trigger": {
      "main": [
        [
          {
            "node": "Fetch RSS Feed",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Fetch RSS Feed": {
      "main": [
        [
          {
            "node": "Normalize Data",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Normalize Data": {
      "main": [
        [
          {
            "node": "POST to Website API",
            "type": "main",
            "index": 0
          }
        ]
      ]
    }
  }
}
